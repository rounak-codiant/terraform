#AWS Provider Key
aws_profile_name = "aws_profile_name"
aws_region     = "us-east-1"


#Project name & ENV
project_name = "Terraform"
env_suffix   = "test"


#VPC
vpc_cidr_block       = "20.0.0.0/16"
private_cidr_block   = ["20.0.0.0/20", "20.0.16.0/20", "20.0.32.0/20"]
public_cidr_block    = ["20.0.48.0/20", "20.0.64.0/20", "20.0.80.0/20"]
enable_dns_hostnames = "true"


#EC2
instance_type      = "t2.nano"
ebs_volume_type    = "gp2"
ebs_volume_size    = "10"
key_pair_name      = "pemkey"
ec2_role_name      = "ec2-role"
ec2_policy_name    = "ec2-role-policy"
ec2_monitoring     = "true"
php-version        = "8.1"
node-version       = "16"
composer-install   = "yes"
php-nginx-config   = "yes"
php-module         = "yes"
nginx-nginx-config = "no"


#S3 Private Bucket
private_bucket_name         = "private-bucket-terraform-1"
private_bucket_versioning   = "Enabled"
private_bucket_acceleration = "Suspended"


#S3 Public Bucket
public_bucket_name         = "public-bucket-terraform-1"
